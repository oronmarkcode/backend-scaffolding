{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI: Start Local Server (Debug)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "DEBUG": "true"
            },
            "justMyCode": false,
            "stopOnEntry": false
        }
    ]
}